<script>
    $(document).ready(function(){
        $("#companyInfo").submit(function (e) {
            e.preventDefault();
            $.post('/settings', $(this).serialize() ).done(function () {
                $('#alrt-sent').slideDown();
            })
        })

        $('#preloader').fadeOut(function(){
            $('footer').css({"background":"white",
                "color":"#333"})
            $('footer').fadeIn();
            $('.body').fadeIn()
            $(window).trigger('resize');
        })
        $("#jobtitle").change(function () {
            if ($(this).val() == 'addNew') {
                $("#forNew").slideDown();
                $("#isNew").val(true)
            } else {
                $("#forNew").slideUp();
                $("#isNew").val(false)
            }
        })
    })

</script>

